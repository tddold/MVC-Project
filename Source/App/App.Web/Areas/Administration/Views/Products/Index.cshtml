@model App.Web.Areas.Administration.AdminViewModels.ProductInputViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@{ 
    var product = Model.Product.First();
    
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => product.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => product.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => product.ShortDecription)
        </th>
        <th>
            @Html.DisplayNameFor(model => product.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => product.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => product.ImagePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => product.Whidth)
        </th>
        <th>
            @Html.DisplayNameFor(model => product.Heigth)
        </th>
        <th>
            @Html.DisplayNameFor(model => product.Depht)
        </th>
        <th>
            @Html.DisplayNameFor(model => product.Weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => product.Manufacturer)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Product) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShortDecription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImagePath)
            <img src="@item.ImagePath" alt="@item.Name"  height="150"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Whidth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Heigth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Depht)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Manufacturer)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</table>
<nav>
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li>
                <a href="/Administration/Products/Index/@(Model.CurrentPage - 1)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        }

        @for (int i = 1; i <= Model.TotalPage; i++)
            {
                var className = string.Empty;
                if (Model.CurrentPage == i)
                {
                    className = "active";
                }

                <li class="@className"><a href="/Administration/Products/Index/@i">@i</a></li>
        }

        @if (Model.CurrentPage < Model.TotalPage)
        {
            <li>
                <a href="/Administration/Products/Index/@(Model.CurrentPage + 1)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }

    </ul>
</nav>

