@model  App.Web.ViewModels.Home.HomeViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Categories</h2>

<div class="btn btn-default">
    @Html.ActionLink("Create New", "Create")
</div>
<br />
<br />
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.Categories)*@
            Name
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Categories)*@
            Image
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Categories)*@
            Description
        </th>
        <th></th>
    </tr>

    @foreach (var category in Model.Categories)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => category.Name)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => category.ImagePath)*@
                <img class="img-responsive" src="@category.ImagePath" alt="@category">
            </td>
            <td>
                @Html.TextAreaFor(modelItem => category.Description, new { @class = "whatever-class", @cols = 60, @rows = 6 })
            </td>
            <td>
                <div class="btn btn-default">
                    @Html.ActionLink("Edit", "Edit", new { id = category.Id })
                </div>
                <div class="btn btn-default">
                    @Html.ActionLink("Details", "Details", new { id = category.Id })
                </div>
                <div class="btn btn-default">
                    @Html.ActionLink("Delete", "Delete", new { id = category.Id })
                </div>
            </td>
        </tr>
    }
</table>
