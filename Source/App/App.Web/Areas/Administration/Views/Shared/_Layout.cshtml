<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bushido Administartion</title>
    @Styles.Render("~/Content/css", "~/Content/kendo")
    @Styles.Render("~/Content/admin")
    @Scripts.Render("~/bundles/theme-modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/kendo")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            
            <div class="navbar-header">
                <a class="logo" href=@Url.Action("Index", "Home", new { area = string.Empty }, null)><img src="~/Content/Theme/img/logo.png" alt="Bushido" /></a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
              @*  @Html.ActionLink("Online shope", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
               
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @Html.ActionLink("Home", "Index", "Home", new { area = string.Empty }, null)
                    </li>
                    <li>
                        @Html.ActionLink("Category", "Index", "Category", new { area = "Administration" }, null)
                    </li>
                    <li>
                        @Html.ActionLink("Products", "Index", "Products", new { area = "Administration" }, null)
                    </li>
                    <li>
                        @Html.ActionLink("Kendo Products", "Index", "KendoProduct", new { area = "Administration" }, null)
                    </li>
                    <li>
                        @Html.ActionLink("Kendo Categories", "Index", "KendoCategories", new { area = "Administration" }, null)
                    </li>
                    <li>
                        @Html.ActionLink("Kendo Manufacturers", "Index", "KendoManufacturers", new { area = "Administration" }, null)
                    </li>

                </ul>
                @Html.Partial("_AdminPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>