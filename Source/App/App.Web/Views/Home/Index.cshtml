<!--Categories-->
<section class="cat-tiles">
    <div class="container">
        <h2>Browse categories</h2>
        <div class="row">
            <!--Category-->
            @foreach (var category in Model.Categories)
            {
                <div class="category col-lg-2 col-md-2 col-sm-4 col-xs-6">          
                    <a href='@Url.Action("Index", "Categories",new { @id = category.Id})'>
                        <img src="@category.ImagePath" alt="@category.Name" />
                        <p>@category.Name</p>
                    </a>         
                </div>
            }
        </div>
    </div>
</section><!--Categories Close-->
<!--Catalog Grid-->
<section class="catalog-grid">
    <div class="container">
        <h2 class="primary-color">Catalog picks</h2>
        <div class="row">
            <!--Tile-->
            @foreach (var product in Model.TopProducts)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="tile">
                        <div class="badges">
                            <span class="sale"></span>
                        </div>
                        <div class="price-label">@product.Price $</div>
                        <a href="#"><img src="@product.ImagePath" alt="@product.Name" /></a>
                        <div class="footer">
                            <a href="#">@product.Manufacturer.Name</a>
                            <span>@product.Name</span>
                            <div class="tools">
                                <div class="rate">
                                    <span class="active"></span>
                                    <span class="active"></span>
                                    <span class="active"></span>
                                    <span></span>
                                    <span></span>
                                </div>
                                <!--Add To Cart Button-->
                                <a class="add-cart-btn" href="#"><span>To cart</span><i class="icon-shopping-cart"></i></a>
                                <!--Share Button-->
                                <div class="share-btn">
                                    <div class="hover-state">
                                        <a class="fa fa-facebook-square" href="#"></a>
                                        <a class="fa fa-twitter-square" href="#"></a>
                                        <a class="fa fa-google-plus-square" href="#"></a>
                                    </div>
                                    <i class="fa fa-share"></i>
                                </div>
                                <!--Add To Wishlist Button-->
                                <a class="wishlist-btn" href="#">
                                    <div class="hover-state">Wishlist</div>
                                    <i class="fa fa-plus"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>