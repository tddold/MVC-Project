@model App.Web.ViewModels.Products.ProductDetailsViewModel

@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Ajax.BeginForm("Create", "Wishlist", new { @id = Model.Id, area = "User" }, null, new { target = "_self", @id = "wish-list-form-" + Model.Id }))
    {
        @Html.AntiForgeryToken();
        <input type="hidden" name="ProductId" value="@Model.Id" />
            <a class="wishlist-btn" onclick="document.getElementById('wish-list-form-' + @(Model.Id)).submit();" )>
                <div class="hover-state">
                    Wishlist
                </div>
                <i class="fa fa-plus"></i>
            </a>
    }
}

